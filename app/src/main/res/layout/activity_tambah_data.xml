<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TambahData"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahData"
    android:padding="16dp">

    <!-- Nama -->
    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama"
        android:inputType="text"
        android:background="@drawable/background"
        android:padding="12dp"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_nama"
        app:layout_constraintTop_toTopOf="@+id/et_nama"
        app:layout_constraintBottom_toBottomOf="@+id/et_nama"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <!-- Nama Panggilan -->
    <TextView
        android:id="@+id/tv_namaPanggilan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Panggilan"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nama"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_namaPanggilan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nama Panggilan"
        android:inputType="text"
        android:background="@drawable/background"
        android:padding="12dp"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_namaPanggilan"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_namaPanggilan"
        app:layout_constraintTop_toTopOf="@+id/et_namaPanggilan"
        app:layout_constraintBottom_toBottomOf="@+id/et_namaPanggilan"
        app:srcCompat="@drawable/baseline_account_circle_24" />

    <!-- Foto -->
    <TextView
        android:id="@+id/tv_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_namaPanggilan"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/fotoimageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_foto" />

    <!-- Email -->
    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fotoimageView"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/background"
        android:padding="12dp"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_email"
        app:layout_constraintTop_toTopOf="@+id/et_email"
        app:layout_constraintBottom_toBottomOf="@+id/et_email"
        app:srcCompat="@drawable/baseline_email_24" />

    <!-- Alamat -->
    <TextView
        android:id="@+id/tv_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Alamat"
        android:inputType="textPostalAddress"
        android:background="@drawable/background"
        android:padding="12dp"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alamat"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_alamat"
        app:layout_constraintTop_toTopOf="@+id/et_alamat"
        app:layout_constraintBottom_toBottomOf="@+id/et_alamat"
        app:srcCompat="@drawable/baseline_home_24" />

    <!-- Tanggal Lahir -->
    <TextView
        android:id="@+id/tv_tanggalLahir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_alamat"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_tanggallahir"
        android:focusable="false"
        android:clickable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Day/Month/Year"
        android:background="@drawable/background"
        android:padding="12dp"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tanggalLahir"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_tanggallahir"
        app:layout_constraintTop_toTopOf="@+id/et_tanggallahir"
        app:layout_constraintBottom_toBottomOf="@+id/et_tanggallahir"
        app:srcCompat="@drawable/baseline_calendar_month_24" />


    <!-- No HP -->
    <TextView
        android:id="@+id/tv_noHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. HP (WhatsApp)"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_tanggallahir"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_noHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Masukkan Nomor HP"
        android:inputType="phone"
        android:background="@drawable/background"
        android:padding="12dp"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_noHp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/et_noHp"
        app:layout_constraintTop_toTopOf="@+id/et_noHp"
        app:layout_constraintBottom_toBottomOf="@+id/et_noHp"
        app:srcCompat="@drawable/baseline_phone_android_24" />

    <!-- Button SAVE -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
